@page
@model Patricia_Adelina_web.Pages.Filme.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Film</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Film.ID" />
            <div class="form-group">
                <label asp-for="Film.Titlu" class="control-label"></label>
                <input asp-for="Film.Titlu" class="form-control" />
                <span asp-validation-for="Film.Titlu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Film.ActorID" class="control-label"></label>
                <select asp-for="Film.ActorID" class="form-control" asp-items="ViewBag.ActorID"></select>
                <span asp-validation-for="Film.ActorID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Film.PretBilet" class="control-label"></label>
                <input asp-for="Film.PretBilet" class="form-control" />
                <span asp-validation-for="Film.PretBilet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Film.GenID" class="control-label"></label>
                <select asp-for="Film.GenID" class="form-control" asp-items="ViewBag.GenID"></select>
                <span asp-validation-for="Film.GenID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
